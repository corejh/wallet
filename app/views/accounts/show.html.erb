<div class="hero-unit">

<p id="notice"><%= notice %></p>

<h2>Account Balance: <small>$<%= @account.balance %></small></h2>

<table class="table table-bordered">
	<caption>Transactions</caption>
	<thead>
    <tr>
      <th>Date</th>
      <th>Type</th>
			<th>Debit</th>
			<th>Credit</th>
			<th>Balance</th>
    </tr>
  </thead>
	<tbody>
		<% for transaction in @account.transactions do %>
    <tr>
			<% tt = transaction.transaction_type %>
			<td><%= transaction.created_at.strftime("%b/%d/%Y") %></td>
			<td><%= transaction.transaction_type %></td>
			<td>
				<% if tt == 1 or (tt == 3 and source_account_id == @account.id) %>
					<%= transaction.balance %>
				<% end %></td>
			<td>
				<% if tt == 2 or (tt == 3 and destination_account_id == @account.id) %>
					<%= transaction.balance %>
				<% end %>
			</td>
			<td>$<%= transaction.balance %></td>
		</tr>
		<% end %>
  </tbody>
</table>

<br/>

<%= link_to 'Back', profile_path, 'data-no-turbolink' => true %>

</div>
